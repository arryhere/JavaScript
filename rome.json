{
  "files": {
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "ignore": [],
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 140
  },
  "linter": {
    "enabled": true,
    "ignore": [],
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  }
}
